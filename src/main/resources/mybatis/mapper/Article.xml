<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.unisem.vms.repository.ArticleRepository">
    <select id="getAllArticles" resultType="kr.co.unisem.vms.entity.Article">
        SELECT article_id, title, category, `date` FROM articles
    </select>

    <select id="getArticlesPaged" resultType="kr.co.unisem.vms.entity.Article">
        SELECT
                <if test="fastPaging == false ">
                -- Slow paging
                SQL_CALC_FOUND_ROWS
                </if>
                article_id
                , title
                , category
                , `date`
        FROM articles
        <if test="sort != null">
        order by ${sort} ${order}
        </if>
        limit #{offset}, #{limit}
    </select>
</mapper>
